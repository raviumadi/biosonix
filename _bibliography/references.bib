}

@article{simmonsCompositionBiosonarImages1995,
  title = {Composition of Biosonar Images for Target Recognition by Echolocating Bats},
  author = {Simmons, James A. and Saillant, Prestor A. and Wotton, Janine M. and Haresign, Tim and Ferragamo, Michael J. and Moss, Cynthia F.},
  year = {1995},
